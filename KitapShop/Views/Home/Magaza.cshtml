@model IEnumerable<KitapShop.Models.Urunler>
@{
    ViewBag.Title = "Mağaza";
    Layout = "~/Views/Shared/_anaLayout.cshtml";
}
<section id="newsSection">
    <div class="row" style="background-color:#ffffff">
        <div class="container-fluid">
            @foreach (var item in Model)
            {
                <div class="col-md-4 col-sm-12">
                    <div class="card h-100">
                        @{
                            var base64 = Convert.ToBase64String(item.Foto);
                            var imgsrc = string.Format("data:image/png;base64,{0}", base64);
                        }
                        <a href="~/Home/Urun/?id=@item.ur_ID"><img class="card-img-top" src="@imgsrc" alt="" width="300px" height="400px"></a>
                        <div class="card-body">
                            <h4 class="card-title">
                                <a href="~/Home/Urun/?id=@item.ur_ID">@item.Ad</a>
                            </h4>
                            <h5>@item.Fiyat TL</h5>
                            <p class="card-text">@item.Baslik</p>
                        </div>
                        <div class="card-footer">
                            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                        </div>
                    </div>
                </div>
                            }
        </div>
    </div>
    </section>