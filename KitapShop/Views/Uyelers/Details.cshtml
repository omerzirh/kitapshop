    ViewBag.Title = "Detaylar";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>Detaylar</h2>

<div>
    <h4>Uyeler</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Ad)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Ad)
