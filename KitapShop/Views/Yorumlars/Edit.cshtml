@model KitapShop.Models.Yorumlar

@{
    ViewBag.Title = "Düzenle";
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}

<h2>Düzenle</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Yorumlar</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.y_ID)
        @Html.HiddenFor(model => model.uyeID)
        @Html.HiddenFor(model => model.kitapID)
        <label class="control-label col-md-2">Kullanıcı Adı</label>
        <label class="col-md-10" style="margin-top:7px;">@Model.Uyeler.Nick</label>
        <br />
        <br />
        <div class="form-group">
            @Html.LabelFor(model => model.Yorum, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Yorum, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Yorum, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.onay, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.onay, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.onay, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Listeye geri dön", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
